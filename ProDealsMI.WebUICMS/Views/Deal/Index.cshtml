@*@model ProDealsMI.Core.ViewModels.DealViewModel*@
@using PagedList;
@using PagedList.Mvc;
@model ProDealsMI.Core.ViewModels.DealViewModel
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/DataTables/media/css/jquery.dataTables.css" rel="stylesheet" />
<div>
    <h1>Search</h1>
    @using (Html.BeginForm("SearchDeals", "Deal", FormMethod.Post, new { @class = "form-inline" }))

    {
        <div class="form-group">
            <label for="">Headline</label>
            @Html.TextBoxFor(model => model.SearchText, new { @class = "input-medium search-query", @placeholder = "Search" })

        </div>
        <div class="form-group">
            <label for="">Announced Date</label>
            @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            <label for="">Country</label>
            @Html.DropDownListFor(x => Model.CountryId, new SelectList(Model.Countries, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
        </div>
        <div class="form-group">
            <label for="">Status</label>
            @Html.DropDownListFor(x => Model.Status, new SelectList(Model.Status, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Status" })
        </div>
        <div class="form-group">
            <label for="">Deal Type</label>
            @Html.DropDownListFor(x => Model.DealTypeId, new SelectList(Model.DealTypes, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Status" })
        </div>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-default" />
            </div>
            }
        </div>
        <div>
            <table class="table table-striped table-bordered table-list datatable">
                <thead>
                    <tr>
                        <th>
                            HeadLine
                        </th>
                        <th>
                            Deal Value
                        </th>
                        <th>
                            Announced Date
                        </th>
                        <th>
                            Published Date
                        </th>
                        <th>
                            DealType Name
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Country Name
                        </th>
                        <th>
                            Region Name
                        </th>
                        <th>
                            Sector Name
                        </th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DealsList != null)
                    {
                        foreach (var item in Model.DealsList)
                        {
                            <tr>

                                <td align="center">
                                    @item.HeadLine
                                </td>
                                <td>
                                    @item.DealValue
                                </td>
                                <td>
                                    @item.AnnouncedDate
                                </td>
                                <td>
                                    @item.PublishedDate
                                </td>
                                <td>
                                    @item.DealTypeName
                                </td>
                                <td>
                                    @item.Status
                                </td>
                                <td>
                                    @item.CountryName
                                </td>
                                <td>
                                    @item.RegionName
                                </td>
                                <td>
                                    @item.SectorName
                                </td>
                                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </td>
                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <script src="~/Scripts/DataTables/media/js/jquery.dataTables.js"></script>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('.datatable').dataTable({
                        "pagingType": "full_numbers",
                        "paging": true,
                        "filter": false,
                        "lengthMenu": [10, 25, 50, 75, 100],
                    });
                });
            </script>
        }
